# Copy to .env and fill in for messaging features

# Telegram (create bot via @BotFather, get chat_id by messaging your bot)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Anthropic (for natural message generation)
ANTHROPIC_API_KEY=

# Database (leave empty for local SQLite, set for PostgreSQL in production)
DATABASE_URL=

# Webhook security (auto-generated on Render, set manually for local dev)
WEBHOOK_SECRET=

# Scheduling
TIMEZONE=America/New_York
DAILY_TARGET=2
ACTIVE_HOURS_START=9
ACTIVE_HOURS_END=21

# SRS tuning
NEW_CARDS_PER_DAY=10
REVIEW_CAP=50
